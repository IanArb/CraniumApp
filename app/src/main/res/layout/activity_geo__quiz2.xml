<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:columnWidth="320dp"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:rowCount="15"
    android:stretchMode="columnWidth" >

    <LinearLayout
        android:id="@+id/california"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_marginTop="5dp"
        android:background="@drawable/california_drop"
        android:orientation="horizontal"
        android:layout_column="0"
        >




    </LinearLayout>

    <LinearLayout
        android:id="@+id/arizona"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/arizona_drop"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:orientation="horizontal"
        android:layout_column="2">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/florida"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/florida_drop"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_row="1"
        android:layout_column="2">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/kansas"
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/kansas_drop"
        android:orientation="horizontal"
        android:layout_row="2"
        android:layout_column="0">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/kentucy"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/kentucy_drop"
        android:layout_row="2"
        android:layout_marginTop="5dp"
        android:layout_column="2">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/alabama"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/alabama_drop"
        android:layout_row="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_column="0">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/louisiana"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/louisiana_drop"
        android:layout_row="3"
        android:layout_marginTop="5dp"
        android:layout_column="0" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/minnesota"
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="@drawable/minnestoa_drop"
        android:layout_row="3"
        android:layout_column="2" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mongolia"
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/mongolia_drop"
        android:layout_row="4"
        android:layout_marginTop="5dp"
        android:layout_column="0" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/newyork"
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="@drawable/newyork_drop"
        android:layout_row="4"
        android:layout_column="2" >


    </LinearLayout>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/california"
        android:id="@+id/imageCalifornia"
        android:layout_marginTop="5dp"
        android:layout_row="5"
        android:layout_column="0" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/arizona"
        android:id="@+id/imageArizona"
        android:layout_marginTop="5dp"
        android:layout_row="5"
        android:layout_column="2" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/alabama"
        android:id="@+id/imageAlabama"
        android:layout_marginTop="5dp"
        android:layout_row="6"
        android:layout_column="0" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/florida"
        android:id="@+id/imageFlorida"
        android:layout_marginTop="5dp"
        android:layout_row="6"
        android:layout_column="2" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/kansas"
        android:id="@+id/imageKansas"
        android:layout_marginTop="5dp"
        android:layout_row="7"
        android:layout_column="0" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/kentucky"
        android:id="@+id/imageKentucy"
        android:layout_marginTop="5dp"
        android:layout_row="7"
        android:layout_column="2" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/louisiana"
        android:id="@+id/imageLouisiana"
        android:layout_marginTop="5dp"
        android:layout_row="8"
        android:layout_column="0" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/minnesota"
        android:id="@+id/imageMinnesota"
        android:layout_marginTop="5dp"
        android:layout_row="8"
        android:layout_column="2" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/new_york"
        android:id="@+id/imageNewYork"
        android:layout_marginTop="5dp"
        android:layout_row="9"
        android:layout_column="2" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/mongolia"
        android:id="@+id/imageMonoglia"
        android:layout_marginTop="5dp"
        android:layout_row="9"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:text="Exit"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-5dp"
        android:id="@+id/exitBtn"
        android:layout_row="13"
        android:layout_column="0"
        android:onClick="OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:layout_marginTop="-5dp"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:id="@+id/help"
        android:layout_row="13"
        android:layout_column="2"
        android:onClick="OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badges"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:id="@+id/badges"
        android:layout_marginLeft="60dp"
        android:layout_row="14"
        android:layout_marginTop="5dp"
        android:layout_column="0"
        android:onClick="OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaders"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:id="@+id/leaders"
        android:layout_marginTop="5dp"
        android:layout_row="14"
        android:layout_column="2"
        android:onClick="OnClick" />

</GridLayout>